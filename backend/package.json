{
  "name": "retail-management-backend",
  "version": "1.0.0",
  "description": "Backend for Retail Management System",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run build:web && node src/index.js",
    "dev": "nodemon src/index.js",
    "build:web": "cd ../frontend && flutter clean && flutter pub get && flutter build web --release --web-renderer canvaskit --dart-define=FLUTTER_WEB_USE_SKIA=true",
    "test": "jest",
    "setup": "node setup_uploads_directories.js",
    "postinstall": "node setup_uploads_directories.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "joi": "^17.11.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  }
} 